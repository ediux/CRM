@model IEnumerable<CRM.Models.客戶銀行資訊>

@{
    ViewBag.Title = ReslangMUI.Languages.CustomerBankAccountManagement;
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="pull-left">
        <p>
            @Html.ActionLink(ReslangMUI.Languages.Create_New, "Create") @if (ViewBag.ReturnUrl != null)
            {
                @Html.Raw("|") <a href="@ViewBag.ReturnUrl">@if(ViewBag.returnTitle!=null) { @Html.Raw((string)ViewBag.returnTitle) } else{ @Html.Raw(ReslangMUI.Languages.Back_to) }</a>
            }
        </p>
    </div>
    <div class="pull-right">
        @using (Html.BeginForm("Filiter", "CustomerDataManagement", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label col-md-3">搜尋:</label>
                <div class="col-md-4">
                    @Html.TextBox("searchFor", "", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        }
    </div>
</div>
<table class="table" id="t">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.銀行名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.銀行代碼)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.分行代碼)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.帳戶名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.帳戶號碼)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.銀行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.分行代碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.帳戶號碼)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
                </td>
                <td>
                    @Html.ActionLink(ReslangMUI.Languages.Edit, "Edit", new { id = item.Id }) |
                    @Html.ActionLink(ReslangMUI.Languages.Delete, "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section pagecss{
    @Styles.Render("~/Content/bs/datatable")
}

@section scripts{
    @Scripts.Render("~/bundles/jq/datatable")
    @Scripts.Render("~/bundles/bs/datatable")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                "dom": '<"row"rt<"row"<"col-lg-3"l><"col-lg-6"p><"col-lg-3"i>>><"clear">',
                "oLanguage": {
                    "sProcessing": "@ReslangMUI.Languages.sProcessing",
                    "sLengthMenu": "@ReslangMUI.Languages.sLengthMenu",
                    "sZeroRecords": "@ReslangMUI.Languages.sZeroRecords",
                    "sInfo": "@ReslangMUI.Languages.sInfo",
                    "sInfoEmpty": "@ReslangMUI.Languages.sInfoEmpty",
                    "sInfoFiltered": "@ReslangMUI.Languages.sInfoFiltered",
                    "sSearch": "@ReslangMUI.Languages.sSearch",
                    "oPaginate": {
                        "sFirst": "@ReslangMUI.Languages.oPaginate_sFirst",
                        "sPrevious": "@ReslangMUI.Languages.oPaginate_sPrevious",
                        "sNext": "@ReslangMUI.Languages.oPaginate_sNext",
                        "sLast": "@ReslangMUI.Languages.oPaginate_sLast"
                    }
                }
            });
        });
    </script>
}