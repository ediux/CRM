@model IEnumerable<CRM.Models.客戶資料>

@{
    ViewBag.Title = ReslangMUI.Languages.CustomerDataManagement;
}

<h2>@ReslangMUI.Languages.CustomerDataManagement</h2>

<hr />
<div class="row">
    <div class="left col-xs-12 col-md-6">
        <p>
            @Html.ActionLink(ReslangMUI.Languages.Create_New, "Create") | @Html.ActionLink(ReslangMUI.Languages.Summary, "Summary")
        </p>
    </div>
    <div class="right col-xs-12 col-md-6">
        @using (Html.BeginForm("Filiter", "CustomerDataManagement", FormMethod.Post, new { @class = "form-inline col-md-12", @id = "Filiter" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="classFiliter">分類:</label>
                @Html.DropDownList("searchFor", null, new { @class = "form-control", @id = "classFiliter" })
            </div>
            <div class="form-group ">                
            <label for="searchFor">@ReslangMUI.Languages.Search:</label>
            @Html.TextBox("searchFor", "", new { @class = "form-control", @id = "searchFor" })
        </div>

        }
        @Html.ActionLink("匯出", "Export", new { searchFor = (string)ViewBag.Filiter }, new { @class = "btn btn-success" })
    </div>
</div>
<hr />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.客戶名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.統一編號)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.電話)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.傳真)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.地址)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.客戶名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.統一編號)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.電話)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.傳真)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.地址)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink(ReslangMUI.Languages.Edit, "Edit", new { id = item.Id }) |
                    @Html.ActionLink(ReslangMUI.Languages.Details, "Details", new { id = item.Id }) |
                    @Html.ActionLink(ReslangMUI.Languages.Delete, "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

